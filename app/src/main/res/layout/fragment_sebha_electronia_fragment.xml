<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mainbackground"
    tools:context="com.moshaf.yasmeen.project1_quraan.Fragments_tabs.sebha_electronia_fragment">

    <ImageView
        android:id="@+id/sebha"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
android:background="@drawable/icon"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/reload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sebha" />

    <TextView
        android:id="@+id/plustsbeeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quraanfont"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:text=" مجموع التسبيحات"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/magmo3tasbeeh"
        app:layout_constraintTop_toBottomOf="@+id/reload" />

    <TextView
        android:id="@+id/tsbeehatxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quraanfont"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:text=" التسبيحه"
        android:textColor="#ffffff"
        android:textSize="20sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tasbeeha"
        app:layout_constraintTop_toBottomOf="@+id/reload" />
    <Button
        android:id="@+id/magmo3tasbeeh"
        android:layout_width="100dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/tsbeehatxt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/background_btn"
        android:layout_marginLeft="20dp" />
    <Button
        android:id="@+id/tasbeeha"
        android:layout_width="100dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/tsbeehatxt"
       app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/background_btn"

        android:layout_marginRight="20dp" />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:entries="@array/tasbeeh_array"
        android:theme="@style/spinnerTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasbeeha"></Spinner>
 <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/spinner"
        android:layout_marginLeft="8dp"

        app:layout_constraintStart_toStartOf="@id/spinner"
        android:background="@drawable/ic_spinner"
        app:layout_constraintBottom_toBottomOf="@id/spinner"
        />




</android.support.constraint.ConstraintLayout>
